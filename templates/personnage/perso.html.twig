{% extends 'base.html.twig' %}

{% block title %}Les personnages{% endblock %}

{% block monTitre %}
Personnage {{ perso.pseudo }}
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-2">
            <img src="{{asset('images/personnages/' ~ perso.pseudo ~ '.png')}}">
        </div>
        <div class="col">
            <h2> {{ perso.pseudo }} </h2>
            <div>
                {% if perso.sexe %}
                    Homme
                {% else %}
                    Femme
                {% endif %}
            </div>
            <h3> Les caractétistiques </h3>
            <ul>
                <li>Force:{{ perso.carac.force }} </li>
                <li>Agilité:{{ perso.carac.agi }} </li>
                <li>Intelligence: {{ perso.carac.intel }} </li>
            </ul>


        </div>
    </div>

{% endblock %}
