{% extends 'base.html.twig' %}

{% block title %}Les personnages{% endblock %}

{% block monTitre %}
Liste des personnages
{% endblock %}


{% block body %}
<table class="table">
    <tr class="thread-dark">
        <th>Image</th>
        <th>Nom</th>
        <th>Age</th>
        <th>Sexe</th>
        <th>Force</th>
        <th>Agilit√©</th>
        <th>Intelligence</th>
    </tr>
    {% for player in players %}
        <tr>
            <td><img src="{{asset('images/personnages/' ~ player.pseudo ~ '.png')}}"></td>
            <td><a href="{{ path('afficher_personnage', {'pseudo' : player.pseudo|lower}) }}">{{ player.pseudo }}</td>
            <td>{{ player.age }}</td>
            <td>
                {% if player.sexe %}
                    Homme
                {% else %}
                    Femme
                {% endif %}
            </td>
            <td>{{ player.carac.force }}</td>
            <td>{{ player.carac.agi }}</td>
            <td>{{ player.carac.intel }}</td>
           


        </tr>
    {% endfor %}
</table>

{% endblock %}
