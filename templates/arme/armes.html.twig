{% extends 'base.html.twig' %}

{% block title %}Les armes{% endblock %}

{% block monTitre %}
Les armes
{% endblock %}

{% block body %}

{% for artillerie in artilleries %} 
<div class="row">
    <div class="col-2">
        <img src="{{asset('images/armes/' ~artillerie.name|replace({'é':'e'})~ '.png')}}">
    </div>
    <div class="col">
        <a href = "{{ path('afficher_arme', {'nom' : artillerie.name|replace({'é':'e'})}) }}"> {{ artillerie.name}}</a>
    </div>
</div>

{% endfor %}
{% endblock %}
